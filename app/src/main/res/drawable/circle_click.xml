<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#D8232A" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="100dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="0.2dp"
                android:color="#ffffff" />
            <corners
                android:radius="100dp" />
        </shape>
    </item>
</selector>