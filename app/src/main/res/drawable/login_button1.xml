<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#fdfdfd" />
            <stroke
                android:width="2dp"
                android:color="#e64545" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#fdfdfd" />
            <stroke
                android:width="0.2dp"
                android:color="#d90000" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#e64545" />
            <stroke
                android:width="2dp"
                android:color="#fdfdfd" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

</selector>