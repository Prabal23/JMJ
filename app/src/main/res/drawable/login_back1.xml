<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#e64545"
                android:startColor="#e64545"/>
            <stroke
                android:width="0.5dp"
                android:color="#ffffff"/>
            <corners
                android:radius="5dp"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#ffffff"
                android:startColor="#ffffff"/>
            <stroke
                android:width="0.5dp"
                android:color="#e64545"/>
            <corners
                android:radius="5dp"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
        </shape>
    </item>

</selector>