<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:background="#ffffff"
    android:focusableInTouchMode="true">

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Forget Password"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Jobs In Sylhet"
                android:textColor="#6b6868"
                android:textSize="11dp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text="@string/user"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

    <View
        android:id="@+id/viv"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/v"
        android:layout_marginTop="0dp"
        android:background="#cad6d6d6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/jmj" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Post Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Fields marked with * are required"
                android:textColor="#585858"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/oldpasspic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/req"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/login_back"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/user"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/text"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="41dp"
                android:background="@drawable/email"
                android:visibility="gone" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/req"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:textColorHint="#6c6b6b">

                <EditText
                    android:id="@+id/sign_old"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Username *"
                    android:textColor="#4e4d4d"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/passpic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/input_old"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/login_back"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/pass1"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_below="@+id/input_old"
                android:layout_marginLeft="19.5dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/password"
                android:visibility="gone" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_old"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#6c6b6b">

                <EditText
                    android:id="@+id/sign_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="New Password *"
                    android:inputType="textPassword"
                    android:textColor="#4e4d4d"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/conpasspic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/input_pass"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/login_back"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/pass"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_conpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_pass"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#6c6b6b">

                <EditText
                    android:id="@+id/sign_conpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Confirm Password *"
                    android:inputType="textPassword"
                    android:textColor="#4e4d4d"
                    android:textSize="15dp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_conpass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Error"
                android:visibility="gone"
                android:textSize="12dp"
                android:textColor="@color/colorPrimaryDark" />

            <LinearLayout
                android:id="@+id/r5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/error"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_back"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:gravity="center"
                    android:text="@string/plane"
                    android:textColor="@color/button_login1"
                    android:textSize="18dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_press"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Change"
                    android:textColor="@color/button_login1"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a9"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2018"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" journeymakerjobs.com. All rights reserved"
            android:textSize="12dp" />

    </LinearLayout>

</RelativeLayout>