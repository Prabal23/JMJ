<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/opt_back">

    <LinearLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/p1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/img_back"
            android:gravity="center"
            android:padding="2dp"
            android:src="@drawable/jobs_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="start|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="Post Name"
                android:textColor="#3b3b3b"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="Organization"
                android:textColor="#919191"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="@string/age"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Experience"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text=":"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/exp_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="1 year"
            android:textColor="#666666"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="@string/clock"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Job Nature"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text=":"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/full_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="Full Time"
            android:textColor="#666666"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r3"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/date"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="@string/calendar"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Last Date"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text=":"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/last_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="2018-07-09"
            android:textColor="#666666"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/r5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/login_back"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="@string/gallery"
                android:textColor="@color/button_login1"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Picture"
                android:textColor="@color/button_login1"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/r6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/login_back"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="@color/button_login1"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/button_login1"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>