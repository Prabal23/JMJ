<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:descendantFocusability="blocksDescendants">

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/jmj" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Journeymakerjobs.com"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Jobs In Sylhet"
                android:textColor="#6b6868"
                android:textSize="11dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/web"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="@string/web"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text="@string/logout"
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

    <View
        android:id="@+id/viv"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/v"
        android:layout_marginTop="0dp"
        android:background="#cad6d6d6" />

    <LinearLayout
        android:id="@+id/ph"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/viv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a9"
            android:textColor="#ffffff"
            android:textSize="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2018"
            android:textColor="#ffffff"
            android:textSize="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" journeymakerjobs.com. All rights reserved"
            android:textColor="#ffffff"
            android:textSize="9dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ph"
        android:layout_marginBottom="20dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/opt_back"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/p1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/opt3"
                        android:gravity="center"
                        android:text="@string/user"
                        android:textColor="#D8232A"
                        android:textSize="30dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5px"
                        android:layout_marginTop="20dp"
                        android:background="#b6b6b6" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="My Profile"
                        android:textColor="#666666"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/opt_back"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/p2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/opt3"
                        android:gravity="center"
                        android:text="@string/ok"
                        android:textColor="#D8232A"
                        android:textSize="30dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5px"
                        android:layout_marginTop="20dp"
                        android:background="#b6b6b6" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Post Job"
                        android:textColor="#666666"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/line1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/r3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/opt_back"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/p3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/opt3"
                        android:gravity="center"
                        android:text="@string/star"
                        android:textColor="#D8232A"
                        android:textSize="30dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5px"
                        android:layout_marginTop="20dp"
                        android:background="#b6b6b6" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Running Jobs"
                        android:textColor="#666666"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/opt_back"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/p4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/opt3"
                        android:gravity="center"
                        android:text="@string/jobs"
                        android:textColor="#D8232A"
                        android:textSize="30dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5px"
                        android:layout_marginTop="20dp"
                        android:background="#b6b6b6" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="All Jobs"
                        android:textColor="#666666"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a9"
            android:textColor="#ffffff"
            android:textSize="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Journey Maker Jobs"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", All rights reserved"
            android:textColor="#ffffff"
            android:textSize="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year"
            android:text=" 2018"
            android:textColor="#ffffff"
            android:textSize="9dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#cad6d6d6" />

</RelativeLayout>